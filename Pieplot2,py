import matplotlib.pyplot as plt
days = [1,2,3,4,5]
sleeping =[7,8,6,11,7]
eating = [2,3,4,3,2]
working = [7,8,7,2,2]
playing = [8,5,7,8,13]
slices = [7,2,2,13]
plt.title('Pie Chart')
cols = ['c', 'm', 'r', 'b']  # Colors for the slices
plt.pie(slices, labels= ['sleeping', 'eating', 'working', 'playing'], colors= cols,  startangle= 90, shadow= True, explode= [0.0, 0.1, 0.0, 0.0], autopct= '%.f%%')
plt.show()